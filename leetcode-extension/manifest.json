{
    "name": "LeetCode Forcer",
    "version": "1.0",
    "description": "An extension which force you to do leetcode problem ",
    "manifest_version": 3,
    "action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "externally_connectable": {
        "matches": ["*://*.google.com/*"]
    },    
    "permissions": [
        "tabs",
        "activeTab",
        "webRequest",
        "storage",
        "alarms"
      
    ],
    "host_permissions": ["https://*/"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
      }
}